					android:text=":" />
				<EditText
					android:id="@+id/asal"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="Dari Mana Asal Anda?" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<TextView
					android:layout_width="70dp"
					android:layout_height="wrap_content"
					android:text="Usia" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=":" />
				<EditText
					android:id="@+id/usia"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="Berapa Usia Anda" />
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<TextView
					android:layout_width="70dp"
					android:layout_height="wrap_content"
					android:text="Lainnya" />
				<TextView
					android:layout_width="wrap_content"
